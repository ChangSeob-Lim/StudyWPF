<Window x:Class="PKNU_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PKNU_WPF"
        mc:Ignorable="d"
        Title="Sample Window" Height="720" Width="1280">
    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Width="100">
        <TextBlock TextWrapping="Wrap" Text="Test Block" Height="30" Margin="10"/>
        <TextBox x:Name="TxtNames" Height="30" TextWrapping="Wrap" Text="Input Something" Margin="10"/>
        <ProgressBar x:Name="PgbTest" Height="30" Margin="10" Minimum="0" Maximum="100" Value="50"/>
        <Slider Height="30" Margin="10"/>
        <PasswordBox x:Name="Pw" PasswordChar="*" Password="Test" Height="30" Margin="10"/>
    </StackPanel>
</Window>
